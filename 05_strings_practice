name="harry"

nameshort = name[0:3]   #string slicing
print(nameshort)

charachter= name[1]
print(charachter)

name = "Harry"

print(name[0:3])

print(name[-4: -1])
print(name[1:4])

print(name[:4]) # is same as print(name[0:4])
print(name[1:]) # is same as print(name[1:5])
print(name[1:5])

